# === Sanity CMS Configuration ===

# Your public Sanity project ID (used in frontend fetch requests)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here

# Your Sanity dataset name (typically 'production')
NEXT_PUBLIC_SANITY_DATASET=production

# Sanity server-side token (keep secret, used for content updates or server-side fetches)
SANITY_SERVER_TOKEN=your_server_token_here

# Sanity browser token (for read-only client-side queries, if required)
NEXT_PUBLIC_SANITY_BROWSER_TOKEN=your_browser_token_here


# === Application Base URL ===

# Base URL of your frontend app (used for redirects, links, etc.)
NEXT_PUBLIC_BASE_URL=http://localhost:3000


# === eSewa Integration (Test Credentials) ===

# Merchant code for eSewa integration (use test code for development)
NEXT_PUBLIC_ESEWA_MERCHANT_CODE=EPAYTEST

# Secret key for eSewa validation (use test key in development only; keep real key private)
NEXT_PUBLIC_ESEWA_SECRET_KEY=your_esewa_secret_key_here


# === Khalti Integration (Test Credentials) ===

# Khalti secret key (test or live based on environment; keep real one private)
NEXT_PUBLIC_KHALTI_SECRET_KEY=your_khalti_secret_key_here
